---
interface Props {
	href: string;
}

const { href } = Astro.props;
---

<a href={href} class='buoy-FAB'>
	<div class='splash'></div>
	<p>
		<slot />
	</p>
</a>

<style lang='scss'>
	.buoy-FAB {
		$fab-diameter: 50px;
		$buoy-thickness: 23px;

		z-index: 99;
		margin: 0 auto;
		position: sticky;
		display: flex;
		align-items: center;
		justify-content: center;
		text-decoration: none;
		color: #fff;
		width: fit-content;
		border-radius: $fab-diameter;
		min-height: $fab-diameter;
		min-width: $fab-diameter;
		border-thickness: $buoy-thickness;
		border-style: ridge;
		border-top-color: var(--accent-orange);
		border-right-color: #fff;
		border-bottom-color: var(--accent-orange);
		border-left-color: #fff;
		animation: buoy-morph 1.5s cubic-bezier(0.26, 1, 0, 1) 1s forwards;

		.splash {
			pointer-events: none;
			position: absolute;
			top: 0;
			border-radius: $fab-diameter;
			height: $fab-diameter;
			width: $fab-diameter;
			background: radial-gradient(circle, rgba(85, 148, 171, 0) 20%, rgba(70, 105, 199, 1) 100%);
			opacity: 0;
			animation: buoy-splash 1.5s cubic-bezier(0.26, 1, 0.5, 0.5) 1.25s forwards;
		}

		p {
			margin: 12px 24px;
			font-weight: 300;
			line-height: 0;
			text-transform: uppercase;
			letter-spacing: 0.5px;
			animation: copy-appear 1s cubic-bezier(0.26, 0.4, 0, 1) 2s backwards;
		}

		@keyframes buoy-splash {
			0% {
				opacity: 1;
			}

			99% {
				transform: scale(6);
				opacity: 0;
			}

			100% {
				display: none;
			}
		}

		@keyframes buoy-morph {
			0% {
				bottom: -100px;
				border-width: $buoy-thickness;
				transform: scale(1.5) rotate(-160deg);
				filter: blur(6px);
			}

			50% {
				bottom: 20px;
				background-color: transparent;
				border-width: $buoy-thickness;
				border-right-color: #fff;
				border-left-color: #fff;
				border-style: ridge;
			}

			100% {
				bottom: 40px;
				background-color: var(--accent-orange);
				border-width: 1px;
				border-color: #ff8838;
				border-style: solid;
			}
		}

		@keyframes copy-appear {
			from {
				max-width: 0px;
				font-size: 0;
				opacity: 0;
			}
			to {
				max-width: 999px;
			}
		}
	}
</style>
