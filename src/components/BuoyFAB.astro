---
interface Props {
	href: string;
}

const { href } = Astro.props;
---

<a href={href} class='buoy-FAB'>
	<div class='splash'></div>
	<p>
		<slot />
	</p>
</a>

<style lang='scss'>
	.buoy-FAB {
		$fab-diameter: 50px;
		$buoy-thickness: 23px;

		margin: 0 auto;
		position: sticky;
		display: flex;
		align-items: center;
		justify-content: center;
		text-decoration: none;
		color: #fff;
		box-shadow: 0px 5px 10px rgb(166, 96, 55);
		width: fit-content;
		border-radius: $fab-diameter;
		min-height: $fab-diameter;
		min-width: $fab-diameter;
		outline: $buoy-thickness solid var(--accent-orange);
		animation: buoy-morph 1.5s cubic-bezier(0.26, 1, 0, 1) 0s forwards;

		.splash {
			z-index: -1;
			position: absolute;
			top: 0;
			border-radius: $fab-diameter;
			height: $fab-diameter;
			width: $fab-diameter;
			background: radial-gradient(circle, rgba(85, 148, 171, 0) 20%, rgba(70, 105, 199, 1) 100%);
			opacity: 0;
			animation: buoy-splash 1.5s cubic-bezier(0.26, 1, 0.5, 0.5) 0.25s forwards;
		}

		p {
			margin: 12px 24px;
			font-weight: 300;
			line-height: 0;
			text-transform: uppercase;
			letter-spacing: 0.5px;
			animation: copy-appear 1s cubic-bezier(0.26, 0.4, 0, 1) 1s backwards;
		}

		@keyframes buoy-splash {
			from {
				opacity: 1;
			}

			to {
				transform: scale(5);
				opacity: 0;
			}
		}

		@keyframes buoy-morph {
			0% {
				bottom: -10px;
				outline-width: $buoy-thickness;
				transform: scale(1.5);
				filter: blur(6px);
			}

			50% {
				bottom: 40px;
				background-color: transparent;
				outline-width: $buoy-thickness;
			}

			100% {
				bottom: 40px;
				background-color: var(--accent-orange);
				outline-width: 1px;
				outline-color: #ff8838;
			}
		}

		@keyframes copy-appear {
			from {
				max-width: 0px;
				font-size: 0;
				opacity: 0;
			}
			to {
				max-width: 999px;
			}
		}
	}
</style>
