---
interface Props {
	href: string;
}

const { href } = Astro.props;
---

<a href={href} class='buoy-FAB'>
	<p>
		<slot />
	</p>
</a>

<style lang='scss'>
	$buoy-thickness: 23px;
	$fab-size: 50px;

	.buoy-FAB {
		position: sticky;
		text-decoration: none;
		color: #fff;
		margin: 0 auto;
		width: fit-content;
		display: flex;
		align-items: center;
		border-radius: $fab-size;
		min-height: $fab-size;
		min-width: $fab-size;
		z-index: 9;
		outline: $buoy-thickness solid var(--accent-orange);
		animation: buoy-morph 1.5s cubic-bezier(0.26, 1, 0, 1) 0s forwards;
		box-shadow: 0px 5px 10px rgb(166, 96, 55);

		&::before {
			z-index: -1;
			content: '';
			border-radius: $fab-size;
			height: $fab-size;
			width: $fab-size;
			background: radial-gradient(circle, rgba(85,148,171,0) 20%, rgba(70,105,199,1) 100%);
			position: absolute;
			top: 0;
			left: 0;
			opacity: 0;
			animation: buoy-splash 1.5s cubic-bezier(0.26, 1, 0, 1) .25s forwards;
		}

		p {
			margin: 12px 24px;
			font-weight: 300;
			line-height: 0;
			text-transform: uppercase;
			letter-spacing: 0.5px;
			animation: copy-appear 1s cubic-bezier(0.26, 0.4, 0, 1) 1s backwards;
		}

		@keyframes buoy-splash {
			from {
				opacity: 1;
			}

			to {
				transform: scale(5);
				opacity: 0;
			}
		}

		@keyframes buoy-morph {
			0% {
				bottom: -100px;
				outline-width: $buoy-thickness;
				transform: scale(1.5);
				filter: blur(6px);
			}

			50% {
				bottom: 40px;
				background-color: transparent;
				outline-width: $buoy-thickness;
			}

			100% {
				bottom: 40px;
				background-color: var(--accent-orange);
				outline-width: 1px;
				outline-color: #ff8838;
			}
		}

		@keyframes copy-appear {
			from {
				font-size: 0;
				opacity: 0;
			}
			to {
				opacity: 1;
			}
		}
	}
</style>
