---
interface Props {
	greeting: string;
}

const { greeting } = Astro.props;
---

<section class='hero-wrapper'>
	<div class='greeting'>
		<h1>{greeting}</h1>
		<p>
			<slot />
		</p>
	</div>
</section>

<style lang='scss'>
	.hero-wrapper {
		display: flex;
		height: 100vh;
		min-height: 540px;
		align-items: center;
		padding: 0 10%;

		.greeting {
			max-width: 650px;
		}
	}

	@keyframes scale-down {
		from {
			opacity: 70%;
			filter: blur(5px);
			transform: scale(1.1);
		}

		to {
			opacity: 50%;
			filter: blur(0);
			transform: scale(1);
		}
	}
</style>
