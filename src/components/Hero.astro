---
interface Props {
	greeting: string;
}

const { greeting } = Astro.props;
---

<section class='hero-wrapper'>
	<div class='greeting'>
		<h1>{greeting}</h1>
		<p>
			<slot />
		</p>
	</div>
</section>

<style lang='scss'>
	.hero-wrapper {
		display: flex;
		height: 100vh;
		align-items: center;
		padding: 0 10%;

		&::before {
			content: '';
			z-index: -1;
			position: fixed;
			top: 0px;
			right: 0px;
			bottom: 0px;
			left: 0px;
			background-image: url(./assets/hero-bg.jpg);
			background-size: cover;
			background-repeat: no-repeat;
			background-position: 70% 100%;
			animation: scale-down 4s cubic-bezier(0.26, 0.4, 0, 1) 0s forwards;

			@media only screen and (max-width: 600px) {
				background-position: 83% 100%;
			}
		}

		.greeting {
			max-width: 650px;
		}
	}

	@keyframes scale-down {
		from {
			opacity: 70%;
			filter: blur(5px);
			transform: scale(1.1);
		}

		to {
			opacity: 50%;
			filter: blur(0);
			transform: scale(1);
		}
	}
</style>
