---
import { Icon } from 'astro-icon/components';
---

<div class='wordmark-container'>
	<Icon class='wordmark-horizontal' name='wordmark-horizontal' />
	<Icon class='wordmark-vertical' name='wordmark-vertical' />
</div>

<style lang='scss'>
	.wordmark-container {
		position: fixed;
		width: 100%;
		z-index: 9;

		.wordmark-horizontal {
			display: block;
			font-size: 40px;
			margin-top: 50px;
			margin-left: 60px;
		}

		.wordmark-vertical {
			display: none;
		}

		@media only screen and (max-width: 600px) {
			.wordmark-horizontal {
				display: none;
			}

			.wordmark-vertical {
				display: block;
				font-size: 55px;
				margin-top: 30px;
				margin-left: 25px;
			}
		}
	}
</style>
