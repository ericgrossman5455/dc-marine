---
import Line from '../Line.astro';

interface item {
	src: string;
	alt: string;
	caption: string;
}

const { items } = Astro.props;
---


<style lang='scss'>
	.section-gallery {
		color: #4D4D4D;
		background-color: #EDEDED;
		position: relative;
		z-index: 2;
		padding: 10vh 0;

		// @media only screen and (max-width: 600px) {
		// 	padding: 0 25px;
		// }

		.header {
			margin-left: 10%;

			h2 {
				text-transform: uppercase;
			}
		}

		.gallery {
			display: flex;
			overflow-x: scroll;
			column-gap: 25px;

			.item:first-child {
				padding-left: 10%;
			}

			.item:last-child {
				padding-right: 10%;
			}

			&::before {
				content: '';
				height: 100%;
				width: 10%;
				position: absolute;
				top: 0;
				left: 0;
				background: linear-gradient(270deg, rgba(237,237,237,0) 0%, rgba(237,237,237,1) 100%);
			}

			&::after {
				content: '';
				height: 100%;
				width: 10%;
				position: absolute;
				top: 0;
				right: 0;
				background: linear-gradient(90deg, rgba(237,237,237,0) 0%, rgba(237,237,237,1) 100%);
			}

			img {
				height: 65vh;
				max-height: 1200px;
				width: auto;
			}

			p {
				position: sticky;
				margin: 15px 50px 25px 0;
				left: 25px;
				max-width: 500px;
			}
		}
	}
</style>

<section class='section-gallery'>
	<div class="header">
		<h2>Featured Vessels</h2>
		<Line bleed={true} dark={true} />
	</div>
	<div class='gallery'>
		{
		items.map((item) => (
			<div class="item">
				<img src=`/assets/${item.src}.jpg` alt={item.alt}>
				<p>{item.caption}</p>
			</div>
		))
		}
	</div>
</section>