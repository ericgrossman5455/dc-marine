---
import Line from '../Line.astro';
import Footer from '../Footer.astro';

interface Props {
	email: string;
	phone: number;
	phoneDisplay: string;
}

const { email, phone, phoneDisplay } = Astro.props;
---

<section id='contact' class='section-contact'>
	<div class='contact'>
		<h2>Contact</h2>
		<Line dark={false} />
		<p>
			<a href=`mailto:${email}`>{email}</a>
			<br />
			<a href=`tel:${phone}`>{phoneDisplay}</a>
		</p>
	</div>
	<Footer />
</section>

<style lang='scss'>
	.section-contact {
		overflow: hidden;
		margin-top: -52px;
		position: relative;
		z-index: 4;
		background: linear-gradient(148deg, #092d55 0%, #04080d 100%);
		height: 100lvh;
		display: flex;
		align-items: center;

		.contact {
			transform: translateX(35%);
			width: 100%;

			a::after {
				content: ' >';
				transition: padding-left ease-out 0.2s;
			}

			a:hover::after {
				padding-left: 0.3rem;
			}

			@media only screen and (max-width: 600px) {
				transform: initial;
				padding-left: 25px;
			}
		}

		&::after {
			content: '';
			pointer-events: none;
			position: absolute;
			background-image: url(/assets/light-rays.png);
			background-repeat: no-repeat;
			background-size: contain;
			transform: rotate(-38deg);
			opacity: 0.1;
			width: 1000px;
			height: 700px;
			top: -17px;
			left: -100px;

			@media only screen and (max-width: 600px) {
				transform: rotate(-27deg);
				width: 880px;
				top: 40px;
				left: -244px;
			}
		}
	}
</style>
