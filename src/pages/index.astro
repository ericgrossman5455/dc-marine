---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout title='DC Marine'>
	<main>
		<Icon class='wordmark-horizontal' name='wordmark-horizontal' />
		<Icon class='wordmark-vertical' name='wordmark-vertical' />
		<h1>Ahoy.</h1>
		<p class='instructions'>
			This site is currently being built...
		</p>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		text-align: center;

		h1 {
			margin-bottom: .5rem;
		}

		.wordmark-horizontal {
			font-size: 40px;
			display: none;
			margin: 0 auto;
		}

		.wordmark-vertical {
			font-size: 60px;
			display: block;
			margin: 20px auto;
		}
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
</style>
